<!DOCTYPE html>
<html>
<head>
  <title>Vehicles</title>
  <%#= stylesheet_link_tag 'bootstrap' %>
</head>
<body>
<h1>Vehicles</h1>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
      <th>Plate</th>
      <th>Kind</th>
    </tr>
  </thead>
  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.id %></td>
        <td><%= vehicle.brand %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.plate %></td>
        <td><%= vehicle.kind %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
</html>
